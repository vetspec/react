{
  "private": true,
  "name": "@boilerplate/api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "prisma": {
    "schema": "src/db/schema.prisma"
  },
  "scripts": {
    "watch": "tsnd --respawn --transpile-only --no-notify --ignore-watch node_modules src/index.ts",
    "start": "ts-node src/index.ts",
    "generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "build": "rimraf dist && tsc --build",
    "buildSchema": "ts-node buildSchema.ts",
    "typecheck": "tsc --noEmit",
    "lint:fix": "eslint --fix --config .eslintrc.commit.js --cache --ext .ts,.tsx src",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "prettify": "prettier --write './src/**/*.ts'",
    "pre-commit": "lint-staged",
    "postinstall": "prisma generate"
  },
  "lint-staged": {
    "*.(js|jsx|json|ts|tsx|html)": [
      "prettier --write"
    ],
    "*.(ts|tsx)": [
      "eslint --fix --config .eslintrc.commit.js"
    ]
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "@sendgrid/client": "7.7.0",
    "@sendgrid/mail": "7.7.0",
    "@sentry/node": "6.19.7",
    "@sentry/tracing": "6.19.7",
    "@apollo/server": "4.12.2",
    "aws-sdk": "2.1083.0",
    "bcryptjs": "2.4.3",
    "chalk": "4.1.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "dayjs": "1.11.13",
    "dotenv": "10.0.0",
    "express": "4.21.2",
    "express-jwt": "6.1.2",
    "glob": "7.2.3",
    "graphql": "15.10.1",
    "graphql-fields": "2.0.3",
    "graphql-scalars": "1.24.2",
    "handlebars": "4.7.8",
    "ioredis": "4.30.0",
    "jsonwebtoken": "8.5.1",
    "morgan": "1.10.0",
    "nodemailer": "6.10.1",
    "pg": "8.10.0",
    "prisma": "^3.5.0",
    "reflect-metadata": "0.1.13",
    "tslib": "2.5.0",
    "type-graphql": "1.1.1",
    "typedi": "0.10.0",
    "typegraphql-prisma": "0.24.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/express": "4.17.23",
    "@types/express-jwt": "6.0.4",
    "@types/graphql-fields": "1.3.9",
    "@types/ioredis": "4.28.10",
    "@types/jsonwebtoken": "8.5.9",
    "@types/morgan": "1.9.10",
    "@types/node": "16.18.126",
    "@types/nodemailer": "6.4.17",
    "ts-node": "10.9.2",
    "ts-node-dev": "1.1.8"
  }
}
