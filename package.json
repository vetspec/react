{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start:api": "node packages/api/dist",
    "build:api": "cd packages/api && yarn build",
    "heroku-prebuild": "rm -rf packages/{web,app}",
    "heroku-cleanup": "cd packages/api && yarn generate",
    "build": "yarn build:api",
    "typecheck": "lerna run typecheck",
    "lint:fix": "lerna run lint:fix",
    "ci": "yarn typecheck && yarn lint:fix"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "@babel/eslint-parser": "7.21.3",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-flowtype": "8.0.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "lint-staged": "12.5.0",
    "prettier": "2.8.8",
    "rimraf": "3.0.2",
    "typescript": "4.9.5"
  },
  "resolutions": {
    "prettier": "2.8.8"
  }
}
